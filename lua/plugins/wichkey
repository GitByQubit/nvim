-- Instalaci√≥n con Lazy.nvim:
return {
	"folke/which-key.nvim",
	config = function()
		require("which-key").setup({
			plugins = {
				marks = true,
				registers = true,
				spelling = {
					enabled = true,
					suggestions = 20,
				},
				presets = {
					operators = true,
					motions = true,
					nav = true,
					z = true,
					g = true,
				},
			},
			window = {
				border = "single", -- Borde para mejor visibilidad
			},
		})
	end,
}
